}
.content4 {
  margin-top: 25rpx;
}

.content4 .link2 {
  height: 80rpx;
  line-height: 80rpx;
  background: #f4f4f4;
  color: #ef4f4f;
  text-align: center;
}

.content4 .con {
  border: #f4f4f4 solid 10rpx;
  border-top: none;
  float: left;
  margin-bottom: 10rpx;
  width: 350rpx;
}

.content4 .con .con-text {
  display: block;
  margin-top: 25rpx;
  margin-left: 25rpx;
}

.content4 .con .con-img {
  padding: 15rpx 0rpx 0rpx 0rpx;
  width: 310rpx;
  height: 310rpx;
  display: block;
  margin: 0 auto;
}

.content4 .con .bot {
  margin-left: 25rpx;
  color: #ed2822;
  margin-top: 60rpx;
}

.content4 .con .bot .price {
  float: left;
  line-height: 50rpx;
}

.content4 .con .bot image {
  width: 50rpx;
  height: 50rpx;
  display: block;
  float: right;
  margin-right: 15rpx;
}

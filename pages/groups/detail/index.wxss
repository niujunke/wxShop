  font-size: 30rpx;
}

.red {
  line-height: 100rpx;
  text-align: center;
  flex: 1;
  color: #ef4f4f;
  border-bottom: 2px solid #ef4f4f;
  font-size: 30rpx;
}

.show {
  display: block;
  text-align: center;

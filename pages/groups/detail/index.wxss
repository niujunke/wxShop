  z-index: 0;
}

.index-advs-navigator {
  height: 100%;
  width: 100%;
}

.index-advs {
  position: relative;
}

.content {
  position: absolute;
  color: #4dff00;
  font-size: 50rpx;
  width: 200rpx;
  height: 200rpx;
  border: #4dff00 solid 6rpx;
  border-radius: 50%;
  text-align: center;
  overflow: hidden;
  right: 35rpx;
  bottom: 10rpx;
}

.content .con {
  width: 180rpx;
  height: 180rpx;
  margin: 0 auto;
  border: #4dff00 solid 3rpx;
  margin-top: 8rpx;
  border-radius: 50%;
